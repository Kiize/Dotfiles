// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+shift+q",
        "command": "quarto.previewScript",
        "when": "quartoRenderScriptActive"
    },
    {
        "key": "ctrl+shift+k",
        "command": "-quarto.previewScript",
        "when": "quartoRenderScriptActive"
    },
    {
        "key": "ctrl+shift+q",
        "command": "quarto.preview",
        "when": "!quartoRenderScriptActive"
    },
    {
        "key": "ctrl+shift+k",
        "command": "-quarto.preview",
        "when": "!quartoRenderScriptActive"
    }
]